@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Easy<span class="display-4 text-success">Life</span></h1>
    <p>We are here to make your <span class="display-4 text-success">life</span> easier and more <span class="display-4 text-success">green</span> with our services</p>
</div>
<hr class="h-100 bg-success" />
<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/rock-garden-311016-329-03-800x400.jpg" alt="First slide" width="800" height="400">
            <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/projectSupport.jpg" alt="Second slide" width="800" height="400">
            <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/shapeConstructuion.jpg" alt="Third slide" width="800" height="400">
            <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr class="h-100 bg-success" />

<div class="text-center">
    <form asp-controller="Services" asp-action="Index" method="get">
        <button class="button button--secondary" type="submit">
            <span class="button__inner">Experience our services.</span>
        </button>
    </form>
</div>

<hr class="h-100 bg-success" />

<div class="text-center">
    <h1 class="display-4">Work with us.</h1>
    <form asp-controller="Advertisement" asp-action="Create" method="get">
        <button class="button button--secondary" type="submit">
            <span class="button__inner">Promote your business.</span>
        </button>
    </form>
</div>

<hr class="h-100 bg-success" />

<div class="text-center">
    <h1 class="display-4">Become a donator.</h1>
    <form asp-controller="Services" asp-action="Index" method="get">
        <button class="button button--secondary" type="submit">
            <span class="button__inner">Support us.</span>
        </button>
    </form>
</div>