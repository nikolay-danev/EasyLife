@using EasyLife.Domain.ViewModels
@model AdvertisementViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h2 class="display-4">Create your advertisement</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Advertisement" asp-action="Create" method="post" class="text-center" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Url"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessName"></label>
                <input asp-for="BusinessName" class="form-control" />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" type="file" name="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>