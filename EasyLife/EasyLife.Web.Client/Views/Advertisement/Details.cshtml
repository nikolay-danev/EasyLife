@using EasyLife.Domain.ViewModels
@model AdvertisementViewModel
@{
    ViewData["Title"] = "Details";
}

<a class="btn btn-info" href="javascript:window.history.back();">Back</a>
<div class="text-center">
    <h2 class="display-4">Details for @Model.BusinessName ad</h2>
</div>
@{ string[] status = { Model.ExpirationDate < DateTime.UtcNow ? "Inactive" : "Active" };}
<hr class="h-auto bg-success" />
<form class="align-content-center text-center border">
    <div class="mt-3">
        <img src="@Model.ImageUrl" width="100" height="100" />
    </div>
    <div class="mt-3">
        <h4>Website Url: <a href="@Model.Url">@Model.Url</a></h4>
    </div>
    <div class="mt-3">
        <h4>Expires on: @Model.ExpirationDate.ToString("MM/dd/yyyy")</h4>
    </div>
    <div class="mt-3 mb-3">
        <small class="text-muted"> Created: @((DateTime.UtcNow - Model.CreatedOn).Days) days ago</small>
    </div>
    <a href="/Advertisement/Update/@Model.Id" class="btn btn-warning mb-3"><h3 class="text-capitalize">Edit</h3></a>
    @if (status[0] == "Inactive")
    {
        <a href="/Advertisement/Renew/@Model.Id" class="btn btn-success mb-3"><h3 class="text-capitalize">Renew</h3></a>
    }
</form>

<hr class="h-auto bg-success" />