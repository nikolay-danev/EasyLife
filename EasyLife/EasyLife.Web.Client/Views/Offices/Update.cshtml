@model EasyLife.Domain.ViewModels.OfficeViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="text-center">
    <h2 class="display-4">Updating @Model.Address</h2>
</div>

<div class="row text-center justify-content-center">
    <div class="col-md-4 text-center">
        <form asp-controller="Offices" asp-action="Update" method="post">
            <hr class="bg-success" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-center">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control text-center" />
                <span asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control text-center" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <input hidden="" asp-for="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>
</div>